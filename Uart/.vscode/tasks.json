    "version": "2.0.0",
    "tasks": [
        {
            "label": "build release",
            "type": "shell",
            "command": "make",
            "args": [
                "all",
                "GCC_PATH=C:/toolchain/avr-gcc-9.2.0-x64-mingw/bin",
                "-s",
                "-j"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build debug",
            "type": "shell",
            "command": "make",
            "args": [
                "all",
                "GCC_PATH=C:/toolchain/avr-gcc-9.2.0-x64-mingw/bin",
                "DEBUG=1",
                "-s",
                "-j"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": [
                "-s",
                "clean"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },           
            "problemMatcher": []
        },
        {
            "label": "Starttest",
            "type": "shell",
            "command": "make",
            "args": [
                "test"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }       
    ]
}